# --- Обязательные настройки OpenAI ---
# Получите ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# --- Настройки Flask (опционально) ---
# Режим отладки (True для разработки, False для продакшена)
FLASK_DEBUG=True
# Порт, на котором будет запущен сервер
PORT=5000

# --- Настройки приложения ---
# Максимальный размер загружаемого файла (в байтах). В коде сейчас 16MB.
MAX_CONTENT_LENGTH=16777216

# --- Логирование и окружение ---
# Окружение: development или production
NODE_ENV=development